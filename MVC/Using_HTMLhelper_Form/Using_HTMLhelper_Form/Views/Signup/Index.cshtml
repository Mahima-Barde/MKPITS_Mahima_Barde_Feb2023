@{
    ViewBag.Title = "Signup";
}

@model Using_HTMLhelper_Form.Models.Signup
@using(Html.BeginForm("Index","Signup",FormMethod.Post))
{
    <h1>Sign up Form</h1>
    <br />
    <b>Enter Username</b>
   @Html.TextBoxFor(m=>m.username,new{@Value="username"})
   <br/><br/>
   <b>Enter Password</b>
   @Html.TextBoxFor(m=>m.password,new{@Value="password"})
   <br/><br/>
   <input type="submit" value="Sign up"/>
}
<h2>Sign up details</h2>

<p>Username :@ViewBag.username<br/><br/>
PassWord :@ViewBag.password</p>

